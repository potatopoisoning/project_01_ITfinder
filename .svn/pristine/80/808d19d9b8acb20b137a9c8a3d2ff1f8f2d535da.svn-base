@charset "UTF-8";
#idx_board_wrap
{
	padding: 50px 0;
}

#idx_board_wrap > div
{
	width : 90%;
	min-width: 1000px;
	max-width: 1200px;
	margin: 0 auto;
}

.idx_board
{
	background-color: #fff;
}

.idx_board .title
{
	padding: 15px;
	/*border-bottom: 1px solid  #ddd;*/
}

.idx_board .title .name
{
	font-size: 20px;
	font-weight: 600;
}

.idx_board .list
{
	padding: 15px;
	box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
}

.idx_board .list ul li
{
	margin-top: 10px;
	font-size: 0;
}

.idx_board .list ul li:first-child
{
	margin-top: 0;
}

.idx_board .list a,
.idx_board .list span
{
	display: inline-block;
	vertical-align: middle;
}
.idx_board .list a
{
	width: 80%;
	font-size: 14px;
}

.idx_board .list span
{
	font-size: 12px;
	color: #777;
}
.spn
{
	width: 9%;
	text-align: right;
	font-size: 12px;
	color: #777;
}
.spn1
{
	width: 9%;
	text-align: left;
	font-size: 12px;
	color: #777;
}

.list_wrap
{
	width : 90%;
	min-width: 1000px;
	max-width: 1200px;
	padding: 0 auto;
	margin: 0 auto;
}

.list_wrap ul
{
	font-size: 0;
}

.list_wrap .item 
{
	display: inline-block;
	width: 22%;
	margin-top: 40px;
	margin-left: 4%;
	box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
	background-color: #fff;
}

.list_wrap .item:nth-child(-n+4)
{
	margin-top: 0;
}

.list_wrap .item:nth-child(4n-3)
{
	margin-left: 0;
}

.list_wrap .item .image
{
	height: 100px;
	display: flex;
	cursor: pointer;
}

.list_wrap .item .image > img 
{
    margin: auto;
}
.list_wrap .item .cont
{
	padding: 12px;
	cursor: pointer;
}

.list_wrap .item strong
{
	display: block;
	margin: 15px 0 10px 0;
	font-size: 16px;
	letter-spacing: -1px;
}

.list_wrap .item p
{
	font-size: 13px;
	letter-spacing: -1px;
}
